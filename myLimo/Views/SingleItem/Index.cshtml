@{
    ViewBag.Title = "Single Item";
}


 <!--Page Content-->
<div class="page-content">

    <!--Breadcrumbs-->
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink((string)ViewBag.MenuModel[0].name, "Index", "Home",
                    new { bizId = @ViewBag.bizId, lg = @ViewBag.lg, catId = 0, subId = 0, id = @ViewBag.firstPageId }, null)
        </li>

        <li>
            @Html.ActionLink((string)ViewBag.Cat[0].category, "Index", (string)ViewBag.PortfolioController,
                    new { bizId = @ViewBag.bizId, lg = @ViewBag.lg, catId = @ViewBag.catId }, null)
        </li>

        @if (@ViewBag.subId > 0)
        {
            <li>
                @Html.ActionLink((string)@ViewBag.CatName, "Index", (string)ViewBag.PortfolioController,
                    new { bizId = @ViewBag.bizId, lg = @ViewBag.lg, catId = @ViewBag.catId, subId = @ViewBag.subId}, null)
            </li>
        }
        <li class="active">@Model.name</li>

        @*<li><a href="index.html">Home</a></li>
        <li><a href="shop-filters-left-3cols.html">Shop - filters left 3 cols</a></li>
        <li>Shop - single item v1</li>*@
    </ol><!--Breadcrumbs Close-->
    <!--Shopping Cart Message-->
    <section class="cart-message">
        <i class="fa fa-check-square"></i>
        <p class="p-style3">"Nikon" was successfully added byfred</p>
        <a class="btn-outlined-invert btn-black btn-sm" href="shopping-cart.html">View cart</a>
    </section><!--Shopping Cart Message Close-->
    <!--Catalog Single Item-->
    <section class="catalog-single">
        <div class="container">
            <div class="row">

                <!--Product Gallery-->
                <div class="col-lg-6 col-md-6">
                    <div class="prod-gal master-slider" id="prod-gal">
                        <!--Slide1-->
                        <div class="ms-slide">
                            <img src="~/masterslider/blank.gif" data-src="http://localhost:2245/admin/FileStore/@Model.imageFileName" alt="Lorem ipsum" />
                            <img class="ms-thumb" src="http://localhost:2245/admin/FileStore/@Model.ifnsmall" alt="thumb" />
                        </div>
                        
                        <!--Slide2-->
                       <div class="ms-slide">
                            <img src="~/masterslider/blank.gif" data-src="http://localhost:2245/admin/FileStore/@Model.imageFileName2" alt="Lorem ipsum" />
                            <img class="ms-thumb" src="http://localhost:2245/admin/FileStore/@Model.imageFileName2" alt="thumb" />
                        </div>
                        
                        <!--Slide3-->
                        <div class="ms-slide">
                            @*<img src="~/masterslider/blank.gif" data-src="http://localhost:53022/img/catalog/product-gallery/1.jpg" alt="Lorem ipsum" />
                            <img class="ms-thumb" src="http://localhost:53022/img/catalog/product-gallery/th_1.jpg" alt="thumb" />*@
                        </div>
                        @*
                        <!--Slide4-->
                        <div class="ms-slide">
                            <img src="masterslider/blank.gif" data-src="~/img/catalog/product-gallery/1.jpg" alt="Lorem ipsum" />
                            <img class="ms-thumb" src="~/img/catalog/product-gallery/th_1.jpg" alt="thumb" />
                        </div>
                        <!--Slide5-->
                        <div class="ms-slide">
                            <img src="masterslider/blank.gif" data-src="~/img/catalog/product-gallery/1.jpg" alt="Lorem ipsum" />
                            <img class="ms-thumb" src="~/img/catalog/product-gallery/th_1.jpg" alt="thumb" />
                        </div>
                        *@
                    </div>
                </div>

                <!--Product Description-->
                <div class="col-lg-6 col-md-6">
                    <h1>@Model.name</h1>
                    @*<div class="old-price">815,00 $</div>*@
                    <div class="price">@Model.price.ToString("C2", @ViewBag.SettingCulture)</div>
                    <div class="buttons group">
                        <div class="qnt-count">
                            <a class="incr-btn" href="#">-</a>
                            <input id="quantity" class="form-control" type="text" value="2">
                            <a class="incr-btn" href="#">+</a>
                        </div>
                        <a class="btn btn-primary btn-sm" id="addItemToCart" href='#'>
                        <i class="icon-shopping-cart"></i>Add to cart</a>
                        @*<a class="btn btn-black btn-sm" href="#"><i class="icon-heart"></i>Add to wishlist</a>*@
                    </div>
                    <p class="p-style2">@Html.Raw(@Model.descPdt)</p>
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-5">
                            
                            <h3>@ViewBag.TellAFriend</h3>
                            <div class="social-links">
                                <a href="#"><i class="fa fa-tumblr-square"></i></a>
                                <a href="#"><i class="fa fa-pinterest-square"></i></a>
                                <a href="#"><i class="fa fa-facebook-square"></i></a>
                            </div>
                        </div>
                        @*<div class="col-lg-8 col-md-8 col-sm-7">
                            <h3>Tags</h3>
                            <div class="tags">
                                <a href="#">Backpack</a>,
                                <a href="#">Chanel</a>,
                                <a href="#">Wristlet</a>
                            </div>
                        </div>*@
                    </div>
                    <div class="promo-labels">
                        <div data-content="This is a place for the unique commercial offer. Make it known."><span><i class="fa fa-truck"></i>@ViewBag.FreeDelivery</span></div>
                        @*<div data-content="This is a place for the unique commercial offer. Make it known."><i class="fa fa-space-shuttle"></i>Deliver even on Mars</div>*@
                        <div data-content="This is a place for the unique commercial offer. Make it known."><i class="fa fa-shield"></i>@ViewBag.SafeBuy</div>
                    </div>
                </div>
            </div>
        </div>
    </section><!--Catalog Single Item Close-->
    <input type="hidden" id="hiddenBizId" data-value="@ViewBag.bizId" />
    <input type="hidden" id="hiddenTmpUN" data-value="@ViewBag.tmpUN" />
    <input type="hidden" id="hiddenEltId" data-value="@ViewBag.id" />
    <input type="hidden" id="hiddenItPri" data-value="@Model.price" />
</div><!--Page Content Close-->
